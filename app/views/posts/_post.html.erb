<div class="card mb-3" style="max-width: 300px; background-color: #2e2e3a; color: white; border-radius: 12px; display: flex; flex-direction: column; min-height: 450px;">
  <% cover_url = post.track.cover_url.presence || "https://placehold.co/280x280/0A0F1E/E0E0E0?text=#{post.track.title.truncate(15)}" %>

  <div class="card-img-top" style="border-radius: 12px 12px 0 0; overflow: hidden;">
    <%= image_tag cover_url, alt: "Pochette de #{post.track.title}", style: "width: 100%; height: auto; object-fit: cover;" %>
  </div>

  <div class="card-body d-flex flex-column flex-grow-1">
    <div class="d-flex align-items-center mb-2">
      <h5 class="card-title mb-0"><%= post.track.title %></h5>
      <small class="ms-auto text-muted">
        <%= post.formatted_date %>
      </small>
    </div>

    <h6 class="card-subtitle mb-2 text-muted">
      <%= post.track.artist_name %>
    </h6>

    <p class="card-text flex-grow-1">
      <% if post.description.present? %>
        <%= post.description %>
      <% else %>
        <!-- placeholder vide pour prendre la place -->
        &nbsp;
      <% end %>
    </p>

    <div class="d-flex justify-content-between align-items-center mt-auto">
      <div>
        <%= button_tag class: "btn btn-sm btn-outline-primary" do %>
          <i class="bi bi-heart"></i> <%= post.votes.count %>
        <% end %>
        <%= button_tag class: "btn btn-sm btn-outline-secondary ms-2" do %>
          <i class="bi bi-chat"></i> <%= post.comments.count %>
        <% end %>
      </div>

      <% if current_user == post.user %>
        <div>
          <%= link_to edit_post_path(post), class: "btn btn-sm btn-outline-success" do %>
            <i class="bi bi-pencil"></i>
          <% end %>

          <%= link_to post_path(post),
                      method: :delete,
                      data: { confirm: "Supprimer ce post ?" },
                      class: "btn btn-sm btn-outline-danger ms-2" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
