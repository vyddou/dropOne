<%# app/views/pages/home.html.erb %>

<div class="container-fluid home-page-container mt-4 mb-5 px-md-3 px-lg-4">

  <% if user_signed_in? %>
    <div class="add-track-button-container mt-4 mb-5 w-100 text-center">
      <% if !Post.exists?(user: current_user, created_at: Time.zone.today.all_day) %>
        <%= link_to "Proposer ma musique du jour", new_post_path, class: "btn btn-primary btn-aurora-glow" %>
      <% end %>
    </div>
  <% end %>

  <section class="unified-carousel-section w-100">
  <h2 class="section-title text-center mb-4"> Les Sons du Moment </h2>

  <% if @carousel_items.present? %>
    <div class="main-carousel-wrapper" data-controller="audio-player">
      <div class="main-carousel"> <%# Pour Swiper.js %>
        <% @carousel_items.each_with_index do |item, index| %>
          <div class="carousel-cell" data-preview-url="<%= item.preview_url %>">
            <div class="album-art-card-container">
              <div class="album-art-visual-wrapper">
                <% cover_url = item.cover_url.presence || "https://placehold.co/280x280/0A0F1E/E0E0E0?text=#{item.title&.truncate(15)}" %>
                <%= image_tag cover_url, alt: "Pochette de #{item.title}", class: "album-cover-image" %>

                <%# Bouton Play superposé %>
                <% if item.preview_url.present? %>
                  <button class="btn-play-on-cover" aria-label="Lire l'extrait"
                    data-action="click->audio-player#togglePlay">
                    <i class="bi bi-play-fill"></i>
                  </button>
                <% end %>

                <%# Texte Titre/Artiste superposé en bas à gauche %>
                <div class="album-cover-text-overlay">
                  <h5 class="album-title-on-cover" title="<%= item.title %>"><%= item.title %></h5>
                  <p class="album-artist-on-cover" title="<%= item.artist %>"><%= item.artist %></p>
                </div>

                 <%# Nouvel affichage du score dans un cœur (haut droit) %>
                <% if item.origin == :app || item.origin == :deezer_post %>
                  <div class="album-cover-score-overlay">
                    <%# L'icône du cœur qui servira de fond %>
                    <i class="bi bi-heart-fill score-heart-icon"></i>
                    <%# Le chiffre du score qui sera superposé %>
                    <span class="score-value"><%= item.net_votes %></span>
                  </div>
                <% end %>
              </div>

              <div class="album-details-section">
                <%# Genre (si présent) %>
                <% if item.genre.present? %>
                  <p class="track-genre small mb-2"><span class="badge bg-secondary"><%= item.genre.capitalize %></span></p>
                <% end %>

                <%# Description (uniquement pour les posts utilisateurs) %>
                <% if item.origin == :app && item.description.present? %>
                  <p class="card-text description-preview small mb-2"><%= truncate(item.description, length: 70) %></p>
                <% end %>

                <div class="mt-auto">
                  <%# Affiche "Posté par" ou "Suggéré par" %>
                  <% if item.user %>
                    <p class="card-text mb-1">
                      <small class="text-muted">
                        <% if item.origin == :app %>
                          Posté par <%= link_to item.user.username, user_path(item.user), class: "text-decoration-none" %>
                        <% else %>
                          Suggéré par <strong><%= item.user.username %></strong>
                        <% end %>
                      </small>
                    </p>
                  <% end %>

                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                     <%# --- LOGIQUE DE VOTE SIMPLIFIÉE --- %>
                      <% deezer_id = (item.origin == :app || item.origin == :deezer_post) ? item.db_post_object.track.deezer_track_id : item.id_for_links %>
                      <% post_id = (item.origin == :app || item.origin == :deezer_post) ? item.db_post_object.id : nil %>

                      <% if user_signed_in? %>
                        <%# Icône pour le vote "J'aime" %>
                        <%= button_to vote_on_track_path(deezer_id, vote_type: 'hot', user: item.user.username),
                            method: :post,
                            class: "btn btn-sm btn-vote",
                            title: "J'aime",
                            form_class: "d-inline",
                            remote: true,
                            id: "like-button-#{post_id}" do %>
                          <i class="bi <%= current_user.liked?(post_id) == true ? 'bi-hand-thumbs-up-fill' : 'bi-hand-thumbs-up' %>" style="<%= 'color: green;' if current_user.liked?(post_id) == true %>"></i>
                        <% end %>

                        <%# Icône pour le vote "Je n'aime pas" %>
                        <%= button_to vote_on_track_path(deezer_id, vote_type: 'cold', user: item.user.username),
                            method: :post,
                            class: "btn btn-sm btn-vote",
                            title: "Je n'aime pas",
                            form_class: "d-inline",
                            remote: true,
                            id: "dislike-button-#{post_id}" do %>
                          <i class="bi <%= current_user.liked?(post_id) == false ? 'bi-hand-thumbs-down-fill' : 'bi-hand-thumbs-down' %>" style="<%= 'color: red;' if current_user.liked?(post_id) == false %>"></i>
                        <% end %>

                        <%# --- FIN DE LA LOGIQUE DE VOTE SIMPLIFIÉE --- %>
                    <% else %>
                      <%# Version pour les non-connectés (boutons désactivés) %>
                      <button class="btn btn-sm btn-vote" title="Connectez-vous pour voter" disabled>
                        <i class="bi bi-hand-thumbs-up"></i>
                      </button>
                      <button class="btn btn-sm btn-vote" title="Connectez-vous pour voter" disabled>
                        <i class="bi bi-hand-thumbs-down"></i>
                      </button>
                    <% end %>

                    </div>
                  </div>

                  <%# Lien Modifier uniquement pour les posts créés par l'utilisateur actuel %>
                  <% if item.origin == :app && user_signed_in? && item.user == current_user %>
                    <%= button_to 'Supprimer', post_path(item.db_post_object), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce post ?' }, class: "btn btn-sm btn-aurora-delete mt-1 w-100" %>
                  <% end %>
                </div>

                <%# --- NOUVEAUX LOGOS DE STREAMING ALIGNÉS --- %>
                <div class="streaming-links-container mt-auto pt-2">
                  <div class="streaming-logos-wrapper">
                    <%# Logo Deezer %>
                    <% if item.deezer_link.present? %>
                      <a href="<%= item.deezer_link %>" target="_blank" rel="noopener noreferrer" class="streaming-logo deezer" title="Écouter sur Deezer">
                        <%# Utilisons une icône plus stylée pour Deezer si possible, sinon le play-circle est bien %>
                        <i class="bi bi-play-circle-fill"></i>
                      </a>
                    <% end %>

                    <%# Logo Spotify %>
                    <% spotify_search_url = "https://open.spotify.com/search/#{URI.encode_www_form_component(item.title + ' ' + item.artist)}" %>
                    <a href="<%= spotify_search_url %>" target="_blank" rel="noopener noreferrer" class="streaming-logo spotify" title="Écouter sur Spotify">
                      <i class="bi bi-spotify"></i>
                    </a>

                    <%# Logo Apple Music %>
                    <% apple_music_search_url = "https://music.apple.com/us/search?term=#{URI.encode_www_form_component(item.title + ' ' + item.artist)}" %>
                    <a href="<%= apple_music_search_url %>" target="_blank" rel="noopener noreferrer" class="streaming-logo apple" title="Écouter sur Apple Music">
                      <i class="bi bi-apple"></i>
                    </a>
                  </div>
                </div>
                <%# --- FIN DES LOGOS DE STREAMING --- %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class="text-center text-muted mt-4">Aucun son à découvrir pour le moment. Revenez plus tard ou soyez le premier à partager !</p>
  <% end %>
</section>

</div>

<audio id="global-audio-player" style="display: none;"></audio>

<%= render "shared/bottom_navbar" %>
