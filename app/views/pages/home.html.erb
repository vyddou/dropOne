<%# app/views/pages/home.html.erb %>

<div class="container-fluid home-page-container mt-4 mb-5 px-md-3 px-lg-4">

  <% if user_signed_in? %>
    <div class="add-track-button-container mt-4 mb-5 w-100 text-center">
     <%= link_to "Ajouter un morceau", new_post_path, class: "btn btn-primary btn-aurora-glow" %>
    </div>
  <% end %>

  <section class="unified-carousel-section w-100">
  <h2 class="section-title text-center mb-4">ðŸŽ¶ Les Sons du Moment ðŸŽ¶</h2>

  <% if @carousel_items.present? %>
    <div class="main-carousel-wrapper" data-controller="audio-player">
      <div class="main-carousel"> <%# Pour Swiper.js %>
        <% @carousel_items.each_with_index do |item, index| %>
          <div class="carousel-cell" data-preview-url="<%= item.preview_url %>">
            <div class="album-art-card-container">
              <div class="album-art-visual-wrapper">
                <% cover_url = item.cover_url.presence || "https://placehold.co/280x280/0A0F1E/E0E0E0?text=#{item.title&.truncate(15)}" %>
                <%= image_tag cover_url, alt: "Pochette de #{item.title}", class: "album-cover-image" %>

                <%# Bouton Play superposÃ© %>
                <% if item.preview_url.present? %>
                  <button class="btn-play-on-cover" aria-label="Lire l'extrait"
                    data-action="click->audio-player#togglePlay">
                    <i class="bi bi-play-fill"></i>
                  </button>
                <% end %>

                <%# Texte Titre/Artiste superposÃ© en bas Ã  gauche %>
                <div class="album-cover-text-overlay">
                  <h5 class="album-title-on-cover" title="<%= item.title %>"><%= item.title %></h5>
                  <p class="album-artist-on-cover" title="<%= item.artist %>"><%= item.artist %></p>
                </div>

                 <%# Nouvel affichage du score dans un cÅ“ur (haut droit) %>
                <% if item.origin == :app || item.origin == :deezer_post %>
                  <div class="album-cover-score-overlay">
                    <%# L'icÃ´ne du cÅ“ur qui servira de fond %>
                    <i class="bi bi-heart-fill score-heart-icon"></i>
                    <%# Le chiffre du score qui sera superposÃ© %>
                    <span class="score-value"><%= item.net_votes %></span>
                  </div>
                <% end %>
              </div>

              <div class="album-details-section">
                <%# Genre (si prÃ©sent) %>
                <% if item.genre.present? %>
                  <p class="track-genre small mb-2"><span class="badge bg-secondary"><%= item.genre.capitalize %></span></p>
                <% end %>

                <%# Description (uniquement pour les posts utilisateurs) %>
                <% if item.origin == :app && item.description.present? %>
                  <p class="card-text description-preview small mb-2"><%= truncate(item.description, length: 70) %></p>
                <% end %>

                <div class="mt-auto">
                  <%# Affiche "PostÃ© par" ou "SuggÃ©rÃ© par" %>
                  <% if item.user %>
                    <p class="card-text mb-1">
                      <small class="text-muted">
                        <% if item.origin == :app %>
                          PostÃ© par <%= link_to item.user.username, user_path(item.user), class: "text-decoration-none" %>
                        <% else %>
                          SuggÃ©rÃ© par <strong><%= item.user.username %></strong>
                        <% end %>
                      </small>
                    </p>
                  <% end %>

                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                      <%# --- LOGIQUE DE VOTE SIMPLIFIÃ‰E --- %>
                      <%# Tous les boutons utilisent la mÃªme route et la mÃªme logique %>
                      <% deezer_id = (item.origin == :app || item.origin == :deezer_post) ? item.db_post_object.track.deezer_track_id : item.id_for_links %>

                      <%= button_to vote_on_track_path(deezer_id, vote_type: 'hot', user: item.user.username), method: :post, class: "btn btn-sm btn-vote", title: "J'aime", form_class: "d-inline" do %>
                        <i class="bi bi-hand-thumbs-up-fill"></i>
                      <% end %>
                      <%= button_to vote_on_track_path(deezer_id, vote_type: 'cold', user: item.user.username), method: :post, class: "btn btn-sm btn-vote", title: "Je n'aime pas", form_class: "d-inline" do %>
                        <i class="bi bi-hand-thumbs-down-fill"></i>
                      <% end %>
                      <%# --- FIN DE LA LOGIQUE DE VOTE SIMPLIFIÃ‰E --- %>
                    </div>
                  </div>

                  <%# Lien Modifier uniquement pour les posts crÃ©Ã©s par l'utilisateur actuel %>
                  <% if item.origin == :app && user_signed_in? && item.user == current_user %>
                    <%= button_to 'Supprimer', post_path(item.db_post_object), method: :delete, data: { confirm: 'ÃŠtes-vous sÃ»r de vouloir supprimer ce post ?' }, class: "btn btn-sm btn-outline-secondary mt-1 w-100" %>
                  <% end %>
                </div>

                <%# Lien Deezer %>
                <% if item.deezer_link.present? %>
                  <p class="track-deezer-link mt-2">
                    <a href="<%= item.deezer_link %>" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-info w-100">
                      <i class="bi bi-play-circle-fill"></i> Ã‰couter sur Deezer
                    </a>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class="text-center text-muted mt-4">Aucun son Ã  dÃ©couvrir pour le moment. Revenez plus tard ou soyez le premier Ã  partager !</p>
  <% end %>
</section>

</div>

<audio id="global-audio-player" style="display: none;"></audio>

