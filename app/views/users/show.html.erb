<div class="container mt-4">
    <style>
    .nav-tabs .nav-link {
      color: #495057; /* Couleur texte sombre */
    }
    .nav-tabs .nav-link.active {
      font-weight: bold;
      color: #0d6efd; /* Bleu Bootstrap */
      border-bottom: 3px solid #0d6efd;
    }
  </style>
  
  <!-- En-tête avec menu burger pour l'utilisateur courant -->
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @user.email %></h1>
    <% if @is_current_user %>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          ☰
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <li><%= link_to "Modifier mon profil", edit_user_registration_path, class: "dropdown-item" %></li>
          <li><%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
        </ul>
      </div>
    <% end %>
  </div>

  <!-- Stats followers/following -->
  <div class="d-flex justify-content-around my-4">
    <div class="text-center">
      <h4>Abonnés</h4>
      <p><%= @user.followers.count %></p>
    </div>
    <div class="text-center">
      <h4>Abonnements</h4>
      <p><%= @user.following.count %></p>
    </div>
  </div>

  <!-- Bouton Follow/Unfollow -->
  <% if user_signed_in? && !@is_current_user %>
    <div class="text-center mb-4">
      <% if @is_following %>
        <%= button_to "Se désabonner", unfollow_user_path(@user), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= button_to "S'abonner", follow_user_path(@user), method: :post, class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>

  <!-- Onglets pour musiques/playlists -->
  <ul class="nav nav-tabs" id="profileTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="tracks-tab" data-bs-toggle="tab" data-bs-target="#tracks" type="button" role="tab">Musiques</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="playlists-tab" data-bs-toggle="tab" data-bs-target="#playlists" type="button" role="tab">Playlists</button>
    </li>
  </ul>

  <div class="tab-content" id="profileTabContent">
    <div class="tab-pane fade show active" id="tracks" role="tabpanel">
      <% if @user.tracks.any? %>
        <%= render @user.tracks %>
      <% else %>
        <p class="mt-3">Aucune musique partagée</p>
      <% end %>
    </div>
    <div class="tab-pane fade" id="playlists" role="tabpanel">
      <% if @user.playlists.any? %>
        <%= render @user.playlists %>
      <% else %>
        <p class="mt-3">Aucune playlist créée</p>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/bottom_navbar" %>

